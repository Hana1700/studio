
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Structure {
  id             String          @id @default(cuid())
  name           String
  description    String?
  subDepartments SubDepartment[]
}

model SubDepartment {
  id          String    @id @default(cuid())
  name        String
  structure   Structure @relation(fields: [structureId], references: [id], onDelete: Cascade)
  structureId String
  contacts    Contact[]
}

model Contact {
  id              String         @id @default(cuid())
  name            String
  title           String
  threeDigits     String?
  fourDigits      String?
  fourDigitsXX    String?
  fourDigitsYY    String?
  structureId     String
  subDepartment   SubDepartment? @relation(fields: [subDepartmentId], references: [id], onDelete: SetNull)
  subDepartmentId String?
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
}

    